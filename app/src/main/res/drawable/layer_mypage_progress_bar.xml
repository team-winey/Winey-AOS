<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/gray_100" /> <!-- Change this to your progress bar's background color -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <solid android:color="@color/winey_yellow" /> <!-- Change this to your progress bar's progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
