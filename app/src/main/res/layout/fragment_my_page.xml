<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="org.go.sopt.winey.domain.entity.User" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_mypage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="17dp"
            android:layout_marginStart="26dp"
            android:text="@string/mypage_title"
            android:textAppearance="@style/TextAppearance.WINEY.body_b_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_mypage_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:src="@drawable/ic_mypage_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_mypage_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="56dp"
            android:background="@color/gray_200"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_mypage_line1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_mypage_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_mypage_background_lv1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_mypage_bubble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="33dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/img_mypage_bubble_lv1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_mypage_saver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/img_mypage_saver_lv1"
                        app:layout_constraintBottom_toTopOf="@id/tv_mypage_edit_nickname"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_mypage_bubble" />


                    <TextView
                        android:id="@+id/tv_mypage_edit_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="@{data.nickname}"
                        android:textAppearance="@style/TextAppearance.WINEY.Headline_b_24_xxl"
                        app:layout_constraintEnd_toStartOf="@id/iv_mypage_edit_nickname"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_mypage_saver" />

                    <ImageView
                        android:id="@+id/iv_mypage_edit_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_mypage_edit"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_mypage_edit_nickname"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toEndOf="@id/tv_mypage_edit_nickname"
                        app:layout_constraintTop_toTopOf="@id/tv_mypage_edit_nickname" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_mypage_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="39dp"
                        android:background="@drawable/shape_gray0_fill_18_rect"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_mypage_edit_nickname"
                        app:layout_constraintVertical_bias="0.0">

                        <TextView
                            android:id="@+id/tv_mypage_profile_goal_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="치킨값 절약하기"
                            android:textAppearance="@style/TextAppearance.WINEY.body_m_14"
                            android:textColor="@color/gray_600"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_mypage_profile_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10,000원만 더 !"
                            android:textAppearance="@style/TextAppearance.WINEY.Headline_b_20_xl"
                            android:textColor="@color/gray_900"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_mypage_profile_level" />

                        <TextView
                            android:id="@+id/tv_mypage_profile_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_gray0_fill_16_rect"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:text="LV. 기사"
                            android:textAppearance="@style/TextAppearance.WINEY.detail_m_12"
                            android:textColor="@color/gray_600"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ProgressBar
                            android:id="@+id/pb_mypage"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="50"
                            android:scaleY="2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_mypage_profile_money" />

                        <TextView
                            android:id="@+id/tv_mypage_profile_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="2만원 절약중"
                            android:textAppearance="@style/TextAppearance.WINEY.detail_m_12"
                            android:textColor="@color/gray_900"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/pb_mypage" />

                        <TextView
                            android:id="@+id/tv_mypage_profile_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3만원"
                            android:textAppearance="@style/TextAppearance.WINEY.detail_m_12"
                            android:textColor="@color/gray_900"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_mypage_profile_current" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_mypage_myfeed"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="18dp"
                            android:background="@drawable/shape_gray100_line_8_rect"
                            android:paddingVertical="12dp"
                            android:text="@string/mypage_myfeed"
                            android:textAppearance="@style/TextAppearance.WINEY.body_m_14"
                            android:textColor="@color/gray_900"
                            app:layout_constraintEnd_toStartOf="@id/btn_mypage_trip"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_mypage_profile_current" />


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_mypage_trip"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/shape_purple400_line_8_rect"
                            android:paddingVertical="12dp"
                            android:text="@string/mypage_trip"
                            android:textAppearance="@style/TextAppearance.WINEY.body_m_14"
                            android:textColor="@color/gray_0"
                            app:layout_constraintBottom_toBottomOf="@id/btn_mypage_myfeed"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@id/btn_mypage_myfeed"
                            app:layout_constraintTop_toTopOf="@id/btn_mypage_myfeed" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/gray_100"
                    app:layout_constraintTop_toBottomOf="@id/cl_mypage_profile">

                    <View
                        android:id="@+id/v_mypage_line2"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/gray_200"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_mypage_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/mypage_item_title"
                        android:textAppearance="@style/TextAppearance.WINEY.body_m_16"
                        android:textColor="@color/gray_600"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/v_mypage_line2" />

                    <TextView
                        android:id="@+id/tv_mypage_item_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="100일간 총 190,000원을 아꼈네요."
                        android:textAppearance="@style/TextAppearance.WINEY.body_b_16"
                        android:textColor="@color/gray_900"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_mypage_item_title" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_mypage_item_top"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_mypage_item_save">

                        <include
                            android:id="@+id/l_mypage_item_coffee"
                            layout="@layout/item_mypage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintEnd_toStartOf="@+id/l_mypage_item_chicken"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <include
                            android:id="@+id/l_mypage_item_chicken"
                            layout="@layout/item_mypage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_mypage_chicken"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/l_mypage_item_coffee"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_mypage_item_bottom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_mypage_item_top">

                        <include
                            android:id="@+id/l_mypage_item_sneakers"
                            layout="@layout/item_mypage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintEnd_toStartOf="@+id/l_mypage_item_airpod"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <include
                            android:id="@+id/l_mypage_item_airpod"
                            layout="@layout/item_mypage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/l_mypage_item_sneakers"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <View
                        android:id="@+id/v_mypage_line3"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="32dp"
                        android:background="@color/gray_200"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_mypage_item_bottom" />

                    <TextView
                        android:id="@+id/tv_mypage_saved_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingHorizontal="16dp"
                        android:text="@string/mypage_2weeks_title"
                        android:textAppearance="@style/TextAppearance.WINEY.body2_m_15"
                        android:textColor="@color/gray_600"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/v_mypage_line3" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:background="@drawable/shape_green100_rect"
                        app:layout_constraintBottom_toBottomOf="@id/tv_mypage_saved_description"
                        app:layout_constraintEnd_toEndOf="@id/tv_mypage_saved_description"
                        app:layout_constraintStart_toStartOf="@id/tv_mypage_saved_description" />

                    <TextView
                        android:id="@+id/tv_mypage_saved_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="190,000원을 절약했어요"
                        android:textAppearance="@style/TextAppearance.WINEY.body_b_16"
                        android:textColor="@color/gray_900"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_mypage_saved_title" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_mypage_save_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/shape_gray0_fill_12_rect"
                        app:layout_constraintTop_toBottomOf="@id/tv_mypage_saved_description">

                        <ImageView
                            android:id="@+id/iv_mypage_save_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="11dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ic_mypage_work"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_mypage_save_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="15dp"
                            android:text="알바를 7시간 뛴 금액과 같아요"
                            android:textAppearance="@style/TextAppearance.WINEY.body_m_14"
                            android:textColor="@color/gray_600"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_mypage_save_work"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/v_mypage_line4"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="32dp"
                        android:background="@color/gray_200"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_mypage_save_work" />

                    <TextView
                        android:id="@+id/tv_mypage_spend_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingHorizontal="16dp"
                        android:text="@string/mypage_2weeks_title"
                        android:textAppearance="@style/TextAppearance.WINEY.body2_m_15"
                        android:textColor="@color/gray_600"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/v_mypage_line4" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:background="@drawable/shape_red100_rect"
                        app:layout_constraintBottom_toBottomOf="@id/tv_mypage_spend_description"
                        app:layout_constraintEnd_toEndOf="@id/tv_mypage_spend_description"
                        app:layout_constraintStart_toStartOf="@id/tv_mypage_spend_description" />

                    <TextView
                        android:id="@+id/tv_mypage_spend_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="190,000원을 낭비했어요"
                        android:textAppearance="@style/TextAppearance.WINEY.body_b_16"
                        android:textColor="@color/gray_900"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_mypage_spend_title" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="12dp"
                        android:background="@drawable/shape_gray0_fill_12_rect"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_mypage_spend_description">

                        <ImageView
                            android:id="@+id/iv_mypage_spend_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="11dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ic_mypage_work"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_mypage_spend_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="15dp"
                            android:text="알바를 7시간 뛴 금액과 같아요"
                            android:textAppearance="@style/TextAppearance.WINEY.body_m_14"
                            android:textColor="@color/gray_600"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_mypage_spend_work"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
