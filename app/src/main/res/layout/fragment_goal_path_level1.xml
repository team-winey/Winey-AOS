<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/ll_goal_path_lv2_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="425dp"
            android:background="@drawable/shape_white_fill_12_rect"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_goal_path_lv2_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_path_lock_guide_title"
                android:textAppearance="@style/TextAppearance.WINEY.detail_m_11"
                android:textColor="@color/gray_500" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_goal_path_money_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sel_all_checkbox_color" />

                <TextView
                    android:id="@+id/tv_goal_path_money_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/goal_path_lv2_lock_money"
                    android:textAppearance="@style/TextAppearance.WINEY.detail_m_11"
                    app:textColor="@drawable/sel_all_checkbox_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_goal_path_feed_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/sel_all_checkbox_color" />

                <TextView
                    android:id="@+id/tv_goal_path_feed_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/goal_path_lv2_lock_feed"
                    android:textAppearance="@style/TextAppearance.WINEY.detail_m_11"
                    app:textColor="@drawable/sel_all_checkbox_text_color" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_goal_path_lv2_lock_dash_line"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_marginStart="78dp"
            android:src="@drawable/img_goal_path_white_dash_line_vertical"
            app:layout_constraintStart_toStartOf="@id/ll_goal_path_lv2_lock"
            app:layout_constraintTop_toBottomOf="@id/ll_goal_path_lv2_lock" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_goal_path_lv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_goal_path_lv1" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_goal_path_step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:lottie_rawRes="@raw/lottie_goal_path_step1" />

            <ImageView
                android:id="@+id/iv_goal_path_lv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_goal_path_lv2"
                android:visibility="invisible" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
