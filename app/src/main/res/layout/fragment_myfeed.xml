<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_myfeed_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_myfeed_back"/>

        <TextView
            android:id="@+id/tv_myfeed_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myfeed_head"
            android:layout_marginVertical="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/v_myfeed_start"
            android:textAppearance="@style/TextAppearance.WINEY.body_b_16"/>

        <View
            android:id="@+id/v_myfeed_start"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/gray_200"
            app:layout_constraintBottom_toTopOf="@id/rv_myfeed_post"
            app:layout_constraintTop_toBottomOf="@id/img_myfeed_back" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_myfeed_post"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_myfeed_start"
            tools:listitem="@layout/item_myfeed_post" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>